{
  "manifest_version": 3,
  "name": "IXL Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant for IXL with ChatGPT, DeepSeek, and Gemini integration",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "https://www.ixl.com/*",
    "https://chat.openai.com/*",
    "https://chat.deepseek.com/*",
    "https://gemini.google.com/*"
  ],
  "action": {
    "default_popup": "popup/settings.html",
    "default_title": "IXL Assistant"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.ixl.com/*"],
      "js": ["content-scripts/ixl.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content-scripts/chatgpt.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": ["content-scripts/deepseek.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content-scripts/gemini.js"],
      "run_at": "document_end"
    }
  ]
}
